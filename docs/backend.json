{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        }
      },
      "required": ["uid", "email"]
    },
    "Product": {
      "title": "Product",
      "description": "Represents a product in the shop.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "images": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {"type": "string"},
              "description": {"type": "string"},
              "imageUrl": {"type": "string"},
              "imageHint": {"type": "string"}
            }
          }
        }
      }
    },
    "Order": {
        "title": "Order",
        "description": "Represents a customer's order.",
        "type": "object",
        "properties": {
            "userId": {
                "type": "string"
            },
            "items": {
                "type": "array",
                "items": {"$ref": "#/backend/entities/Product"}
            },
            "total": {
                "type": "number"
            },
            "createdAt": {
                "type": "string",
                "format": "date-time"
            }
        }
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/UserProfile" },
      "description": "Stores user profile information."
    },
    "/products/{productId}": {
      "schema": { "$ref": "#/backend/entities/Product" },
      "description": "Stores product information for the shop."
    },
    "/users/{userId}/orders/{orderId}": {
        "schema": { "$ref": "#/backend/entities/Order"},
        "description": "Stores orders for each user."
    }
  }
}
